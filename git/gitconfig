[user]
    name = Caleb Smith
    email = caleb.smithnc@gmail.com

[github]
    user = calebsmith

[core]
    excludesfile = ~/.gitignore
    editor = vim

[push]
    default = current

[merge]
    tool = vimdiff

[mergetool]
    prompt = false
    keepBackup = false

[diff]
    tool = vimdiff

[color]
    diff = auto
    status = auto
    branch = auto

[alias]
    network = log --oneline --graph
    last = log -1
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

    diffp = diff --patience
    mergep = merge --strategy-option=patience
