set nocompatible
set autoread
set showmode
set showmatch
set mat=2
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4
set laststatus=2
set path=$PWD/**
set number
set hlsearch
set incsearch
set history=1000
set undolevels=1000
set title
set ruler
syntax enable
set encoding=utf8
set ffs=unix,dos,mac
set nobackup
set nowb
set noswapfile
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
set bg=dark
let python_highlight_all = 1
set nofoldenable

